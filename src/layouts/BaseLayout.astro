---
const { title = "SpiritGuide", description = "" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css">
  </head>
  <body class="bg-gradient-to-b from-purple-900 via-indigo-900 to-black text-white font-sans">
    <!-- Header -->
    <header class="sticky top-0 bg-black bg-opacity-60 backdrop-blur-md z-50">
      <nav class="max-w-6xl mx-auto flex justify-between items-center px-6 py-4">
        <h1 class="text-2xl font-bold text-yellow-300">✨ SpiritGuide</h1>
        <ul class="flex gap-6 text-lg">
          <li><a href="/" class="hover:text-yellow-300">Home</a></li>
          <li><a href="/services" class="hover:text-yellow-300">Services</a></li>
          <li><a href="/about" class="hover:text-yellow-300">About Us</a></li>
          <li><a href="/contact" class="hover:text-yellow-300">Contact</a></li>
        </ul>
      </nav>
    </header>

    <!-- Page Content -->
    <main class="max-w-6xl mx-auto px-6 py-12">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-black bg-opacity-70 py-6 mt-12">
      <div class="text-center text-gray-400">
        © {new Date().getFullYear()} SpiritGuide • All Rights Reserved ✨
      </div>
    </footer>
  </body>
</html>
